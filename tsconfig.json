{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // ✅ Disable strict type checking
    "noImplicitAny": false, // ✅ Allow variables without explicit types
    "noImplicitReturns": false, // ✅ Allow functions without explicit return types
    "noImplicitThis": false, // ✅ Allow `this` to be implicitly `any`
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // ✅ Disable isolated module checks
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prettier.config.js",
    "src/app/api/verify-code"
  ],
  "exclude": [
    "node_modules"
  ]
}
